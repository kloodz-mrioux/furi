{
  "tasks": {
    "dev": "deno run --watch --allow-all --env-file ./src/app.ts",
    "play": "deno run --watch --allow-all --env-file ./sandbox/play.ts",
    "debug": "deno run --inspect --watch --allow-all --env-file ./src/app.ts",
    "break": "deno run --inspect-brk --watch --allow-all --env-file ./src/app.ts",
    "test": "deno test --allow-all",
    "build": "deno run -A build_npm.ts 0.0.1"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "@types/node": "npm:@types/node@^22.13.0"
  }
}
